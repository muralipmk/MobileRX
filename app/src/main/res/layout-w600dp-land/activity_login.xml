<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/hospital_view"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:id="@+id/login_layout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="@string/hintusername"
            android:background="@color/window_background"
            android:textColor="@color/my_accent"
            android:textColorHint="@color/my_accent"
            android:ems="10"
            android:drawableStart="@drawable/user"
            android:id="@+id/username_editText"
            android:layout_marginTop="108dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:hint="@string/hintpasswd"
            android:textColor="@color/my_accent"
            android:textColorHint="@color/my_accent"
            android:ems="10"
            android:drawableStart="@drawable/passwd"
            android:layout_marginTop="10dp"
            android:background="@color/window_background"
            android:id="@+id/userpasswd_editText"
            android:layout_below="@+id/username_editText"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_marginTop="10dp"
            android:textColor="@color/window_background"
            android:background="@color/my_accent"
            android:id="@+id/login_button"
            android:layout_below="@+id/userpasswd_editText"
            android:layout_alignEnd="@+id/userpasswd_editText" />

        <Button
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="@string/admin_login"
            android:id="@+id/admin_login_button"
            android:layout_marginTop="30dp"
            android:background="@color/my_accent"
            android:textColor="@color/window_background"
            android:layout_below="@+id/login_button"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</RelativeLayout>