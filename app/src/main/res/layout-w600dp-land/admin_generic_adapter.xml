<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    android:id="@+id/drug_parameter_layout">

    <TextView
        android:id="@+id/form_textView"
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="DrugForm"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/accent_material_light" />

    <TextView
        android:id="@+id/drug_name_textView"
        android:layout_width="500dp"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="DrugName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="30dp"

        android:layout_alignTop="@+id/form_textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/unit_textView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Frequency"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/accent_material_light"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/medium_uom"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Route"
        android:id="@+id/route_textView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/form_textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Strength"
        android:id="@+id/medium_uom"
        android:textColor="@color/my_accent"
        android:layout_alignStart="@+id/unit_textView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>
