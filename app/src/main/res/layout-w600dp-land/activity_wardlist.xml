<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/hospital_view"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:background="@drawable/borderwhitebackground"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="@color/window_background"
            android:text="@string/wardtitle"
            android:gravity="center"
            android:background="@drawable/titledesign"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/wardtitleView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wardlistView"
            android:layout_below="@+id/wardtitleView"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</RelativeLayout>